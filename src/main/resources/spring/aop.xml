<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                 http://www.springframework.org/schema/context
	             http://www.springframework.org/schema/context/spring-context.xsd
                 http://www.springframework.org/schema/aop
                 http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

    <context:component-scan  base-package="com.wisely.springmvc.service" />

    <bean id="aopServiceImpl" class="com.wisely.springmvc.service.impl.AopServiceImpl"/>

    <bean id="timeHandlerAspect" class="com.wisely.springmvc.service.aspect.TimeHandlerAspect"/>

    <aop:config proxy-target-class="false">
        <aop:aspect id="time" ref="timeHandlerAspect">
            <aop:pointcut id="addAllMethod" expression="execution(* com.wisely.springmvc.service..*.*(..))"/>
            <aop:before method="printTime" pointcut-ref="addAllMethod"/>
            <aop:after method="printTime" pointcut-ref="addAllMethod"/>
        </aop:aspect>
    </aop:config>

</beans>